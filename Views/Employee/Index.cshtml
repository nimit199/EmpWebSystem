        <div class ="form­‐group">
            <label>Employee ID :  @Model.Employee.Eid</label>
        </div>

        @Html.HiddenFor(m => m.Employee.Eid)
        <div class="form­‐group">
            @Html.LabelFor(m => m.Employee.Name,"Employee Name")
            @Html.TextBoxFor(m => m.Employee.Name, Model.Employee.Name, new { @class = "form-group" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Employee.Salary,"Employee Salary")
            @Html.TextBoxFor(m => m.Employee.Salary, Model.Employee.Salary.ToString(), new { @class = "form-group" })
        </div>
    }
    else
    {
        @Html.HiddenFor(m => m.IsEdit)
        <div class="form-group">
            @Html.LabelFor(m => m.Employee.Did,"Department Name")
            @Html.DropDownListFor(m => m.Employee.Did,
                new SelectList(ViewBag.DepartmentList,
                    "Key", "Value"), "Select Department", new { @class = "form-group" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Employee.Eid,"Employee ID")
            @Html.TextBoxFor(m => m.Employee.Eid, new { @class = "form-group" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Employee.Name,"Employee Name")
            @Html.TextBoxFor(m => m.Employee.Name, new { @class = "form-group" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Employee.Salary,"Employee Salary")
            @Html.TextBoxFor(m => m.Employee.Salary, new { @class = "form-group" })
        </div>
    }



    <br/>

    <div><button type="submit" class=“btn btn-­primary”>Save</button></div>
