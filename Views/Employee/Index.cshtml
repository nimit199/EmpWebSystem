@model EmpWebSystem.ViewModel.EmployeeViewModel
@{
    ViewBag.Title = "Employee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>View for Employee</h2>


@using (Html.BeginForm("Create", "Employee"))
{

    if (Model.IsEdit == true)
    {
        @Html.HiddenFor(m => m.IsEdit)

        <div class="form­‐group">
            @Html.LabelFor(m => m.Employee.Did, "Department")
            @Html.DropDownListFor(m => m.Employee.Did,
                new SelectList(ViewBag.DepartmentList,
                    "Key", "Value"), new { @class = "form-group" })
        </div>
        @*
            <div class=“form­‐group”>
                @Html.LabelFor(m => m.Employee.Eid)
